@model DemoPortal.Models.UserLoginModel

@{
    /**/

    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <br />
    <!-- start banner Area -->
    <div class="banner-area relative style">
        <div class="container">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="teklif pt-100 pb-100">

                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-login" role="tabpanel" aria-labelledby="nav-home-tab">

                                <div class="row">
                                    <div class="col-md-12 login-sec">
                                        <p class="wc-social-login-divider">
                                            <h2 class="text-center">Login Now</h2>
                                        </p>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        @if (ViewBag.Message != null)
                                        {
                                            <div class="form-group Error">
                                                @ViewBag.Message
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">

                                        <div class="form-group">

                                            <label>User</label>
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email Id" })
                                            @Html.ValidationMessageFor(a => a.Email, null, new { @class = "Error" })


                                        </div>
                                        <div class="form-group">

                                            <label>Password</label>
                                            @*<input type="password" class="form-control" placeholder="****  ">*@
                                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(a => a.Password, null, new { @class = "Error" })

                                        </div>
                                        <div class="form-group">

                                            <button type="submit" class="btn btn-success float-right submit_btn">
                                                Login  <i class="fa fa-sign-in"></i>
                                            </button>

                                        </div>
                                    </div>
                                </div>



                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>

        </div>
    </div>
    <!-- End banner Area -->
}




